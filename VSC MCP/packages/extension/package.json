{
  "name": "vsc-mcp-extension",
  "displayName": "VSC MCP",
  "description": "VSCode as Model Context Protocol Server - Complete implementation with all tools",
  "version": "1.0.0",
  "author": "Ivan Mezentsev",
  "publisher": "ivan-mezentsev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivan-mezentsev/vsc-mcp"
  },
  "engines": {
    "vscode": "^1.90.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "vscode"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscMcp.start",
        "title": "Start Server",
        "category": "VSC MCP"
      },
      {
        "command": "vscMcp.stop",
        "title": "Stop Server",
        "category": "VSC MCP"
      },
      {
        "command": "vscMcp.restart",
        "title": "Restart Server",
        "category": "VSC MCP"
      },
      {
        "command": "vscMcp.toggle",
        "title": "Toggle Server",
        "category": "VSC MCP"
      }
    ],
    "configuration": {
      "title": "VSC MCP",
      "properties": {
        "vscMcp.startOnActivate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the MCP server when VSCode activates"
        },
        "vscMcp.port": {
          "type": "number",
          "default": 60100,
          "description": "Port for the MCP server to listen on"
        },
        "vscMcp.confirmationUI": {
          "type": "string",
          "enum": ["quickPick", "inputBox", "modal"],
          "default": "quickPick",
          "description": "Type of confirmation UI to use for user interactions"
        },
        "vscMcp.confirmNonDestructiveCommands": {
          "type": "boolean",
          "default": false,
          "description": "Show confirmation dialogs even for non-destructive commands"
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "dev": "pnpm build --watch",
    "lint": "eslint src --ext ts --fix",
    "test": "echo \"Tests not implemented yet\"",
    "vscode:prepublish": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "dedent": "^1.5.3",
    "diff": "^7.0.0",
    "fast-deep-equal": "^3.1.3",
    "p-wait-for": "^5.0.2",
    "strip-bom": "^5.0.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "typescript": "^5.9.2"
  }
}