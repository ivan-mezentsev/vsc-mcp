{
  "name": "vsc-mcp-server",
  "displayName": "VSC-MCP Server",
  "description": "A VSCode extension that exposes your IDE as an MCP server â€” compensating for missing capabilities required by AI agents and enabling advanced control.",
  "publisher": "ivan-mezentsev",
  "version": "0.3.1",
  "type": "commonjs",
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "MCP",
    "Model Context Protocol",
    "server",
    "VSCode",
    "Terminal",
    "tools"
  ],
  "files": [
    "dist/**",
    "media/**",
    "icon.png",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "NOTICE"
  ],
  "engines": {
    "vscode": "^1.94.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ivan-mezentsev/vsc-mcp.git"
  },
  "homepage": "https://github.com/ivan-mezentsev/vsc-mcp",
  "bugs": {
    "url": "https://github.com/ivan-mezentsev/vsc-mcp/issues"
  },
  "author": "Ivan Mezentsev (https://github.com/ivan-mezentsev)",
  "license": "Apache-2.0",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mcpServer.stopServer",
        "title": "MCP Server: Stop Server"
      },
      {
        "command": "mcpServer.startServer",
        "title": "MCP Server: Start Server"
      },
      {
        "command": "mcpServer.toggleActiveStatus",
        "title": "MCP Server: Toggle Active Status"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "mcpServer.startOnActivate": {
          "type": "boolean",
          "default": true,
          "description": "Determines if the MCP Server should start automatically on VSCode activation."
        },
        "mcpServer.port": {
          "type": "number",
          "default": 60100,
          "description": "The port that the MCP Server listens on. Set in case of conflicts or custom configurations."
        },
        "mcpServer.confirmationUI": {
          "type": "string",
          "enum": [
            "InputBox",
            "statusBar"
          ],
          "default": "InputBox",
          "description": "The UI to use for confirming actions: status bar buttons or input box (editable command)."
        },
        "mcpServer.confirmNonDestructiveCommands": {
          "type": "boolean",
          "default": false,
          "description": "If true, even commands marked as non-destructive (modifySomething=false) will require user confirmation."
        },
        "mcpServer.askReportTimeoutSeconds": {
          "type": "number",
          "default": 600,
          "minimum": 0,
          "maximum": 360000,
          "description": "Timeout in seconds for the ask-report webview. When > 0, the dialog shows a countdown and auto-cancels on expiration."
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
  "vscode:prepublish": "pnpm package",
    "package-extension": "cross-env npm_config_user_agent=pnpm vsce package --no-dependencies",
    "generate:icon": "node scripts/generate_icon.js",
    "compile": "pnpm check-types && node build.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node build.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile-tests": "node build.js --test",
    "pretest": "pnpm compile-tests",
    "test": "vscode-test",
    "package": "pnpm check-types && node build.js --production"
  },
  "devDependencies": {
    "@types/diff": "^7.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.17.2",
    "@types/pdf-parse": "^1.1.4",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.94.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.6.0",
    "cross-env": "^10.0.0",
    "sharp": "^0.34.3",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dedent": "^1.5.3",
    "diff": "^8.0.2",
    "esbuild": "^0.25.9",
    "ignore": "^7.0.3",
    "isbinaryfile": "^5.0.4",
    "mammoth": "^1.10.0",
    "p-wait-for": "^5.0.2",
    "pdf-parse": "^1.1.1",
    "strip-bom": "^5.0.0"
  },
  "packageManager": "pnpm@10.6.1+sha512.40ee09af407fa9fbb5fbfb8e1cb40fbb74c0af0c3e10e9224d7b53c7658528615b2c92450e74cfad91e3a2dcafe3ce4050d80bda71d757756d2ce2b66213e9a3"
}
